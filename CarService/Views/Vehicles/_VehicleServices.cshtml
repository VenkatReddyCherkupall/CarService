@model List<Service>
<h4>Services</h4>
@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
                 <tr>
                    <th>Service Date</th>
                    <th>Description</th> 
                    <th> Service Cost</th> 
                    <th>Mechanic</th>
              </tr>
         </thead>
    <tbody>
            @foreach (var e in Model)
            {
        <tr>
                        <td>@e.ServiceDate.ToString()</td> 
                        <td>@e.Description</td>
                        <td>@e.ServiceCost.ToString("c")</td>
                        <td>@e.Mechanic.FName</td>
        </tr>
            }
    </tbody>
    </table>
}
else
{
    <div>No Services to show at this time.</div>
}